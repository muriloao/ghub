    "version": "0.2.0",
    "configurations": [
        {
            "name": "GitHub Mobile - Debug",
            "request": "launch",
            "type": "dart",
            "cwd": "apps/mobile",
            "program": "apps/mobile/lib/main.dart",
            "args": [
                "--flavor",
                "development"
            ],
            "env": {
                "FLUTTER_MODE": "debug"
            }
        },
        {
            "name": "GitHub Mobile - Profile",
            "request": "launch",
            "type": "dart",
            "cwd": "apps/mobile",
            "program": "apps/mobile/lib/main.dart",
            "flutterMode": "profile",
            "args": [
                "--flavor",
                "development"
            ]
        },
        {
            "name": "GitHub Mobile - Release",
            "request": "launch",
            "type": "dart",
            "cwd": "apps/mobile",
            "program": "apps/mobile/lib/main.dart",
            "flutterMode": "release",
            "args": [
                "--flavor",
                "production"
            ]
        }
    ]
}